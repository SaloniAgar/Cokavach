<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CountriesFragment">

    <!-- TODO: Update blank fragment layout -->


    <SearchView
        android:id="@+id/searchCountry"
        android:layout_width="300dp"
        android:layout_height="?actionBarSize"
        android:background="@drawable/custom_bg"
        android:layout_marginTop="6dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/sortStat"
        android:layout_width="50dp"
        android:layout_height="?actionBarSize"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/searchCountry"
        android:layout_toEndOf="@+id/searchCountry"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_sort"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerStat"
        android:layout_below="@+id/searchCountry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:padding="6dp" />

</RelativeLayout>